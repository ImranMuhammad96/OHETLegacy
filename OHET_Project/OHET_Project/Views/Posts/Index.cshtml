@model IEnumerable<OHET_Project.Models.models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            Comments
        </th>
        <th>
            Read time
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.OrderByDescending(x => x.Date)) {
    if (item.ApplicationUserId == ViewBag.userId || item.isPublic)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @item.comments.Count
        </td>
        <td>
            @{ 
                int t = @item.Description.Split(' ').Count();
            }
                @foreach (var i in item.subposts) {
                    t = t + i.Description.Split(' ').Count();
                }
            @{ 
                t = t / 200;
            }
            @t min
        </td>
        @if (@item.ApplicationUserId == ViewBag.userId || User.IsInRole("Admin"))
        {
            if (@item.isPublic == true)
            {
                <td>
                    @Html.ActionLink("Unpublish", "PublishOrUnpublish", new { id = item.IDPost })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Publish", "PublishOrUnpublish", new { id = item.IDPost })
                </td>
            }
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDPost }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDPost })
            </td>
        }
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.IDPost })
        </td>
    </tr>
    }
}

</table>
