@model OHET_Project.Models.models.Post

@{
    ViewBag.Title = "Create";
}

<section id="three" class="wrapper style2">
    <div class="inner">
        <div class="inner">
            <header class="align-center">
                <p class="special"></p>
                <h2>Create Article</h2>
            </header>
        </div>
        @using (Html.BeginForm("Create", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="12u$">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="12u$">
                @Html.TextAreaFor(model => model.Description, 24, 1, htmlAttributes: new { @class = "form-control", @placeholder = "Description" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="12u$">
                <input type="file" name="ImageData" onchange="fileCheck(this);" />
            </div>

            <br />

            <footer class="align-center">
                <button type="submit" class="button alt">Create</button>
            </footer>
        }
    </div>
    <div class="align-center">
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
