@model OHET_Project.Models.models.Post

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.Email) |
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayFor(model => model.Title)
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Description)
            </td>
        </tr>
    </table>
</div>

@if (((Model.ApplicationUserId == ViewBag.userId && User.IsInRole("Editor")) || User.IsInRole("Admin")) && Model.isPublic == false)
{
    <p>
        @Html.ActionLink("Add a subpost", "Create", "Subposts", new { id = Model.IDPost }, new { })
    </p>
}

<table class="table">
    @foreach (var item in Model.subposts.OrderBy(x => x.OrderNr))
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.Title)
            </th>
            <th></th>
        </tr>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @if ((item.Post.ApplicationUserId == ViewBag.userId && User.IsInRole("Editor")) || User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", "Comments", new { id = @item.IDSubpost }, new { }) |
                    @Html.ActionLink("Delete", "Delete", "Comments", new { id = @item.IDSubpost }, new { })
                </td>
            }
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Add a comment", "Create", "Comments", new { id = Model.IDPost }, new { })
</p>

<table class="table">
    <tr>
        <th>
            Comments
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.comments.OrderBy(x => x.Date))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            @if (item.ApplicationUserId == ViewBag.userId || (item.Post.ApplicationUserId == ViewBag.userId && User.IsInRole("Editor")) || User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", "Comments", new { id = @item.IDComment }, new {}) |
                    @Html.ActionLink("Delete", "Delete", "Comments", new { id = @item.IDComment }, new {})
                </td>
            }
        </tr>
    }
</table>

    @if ((Model.ApplicationUserId == ViewBag.userId && User.IsInRole("Editor")) || User.IsInRole("Admin"))
    {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = Model.IDPost }) |
            @Html.ActionLink("Delete", "Delete", new { id = Model.IDPost })
        </td>
    }
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
