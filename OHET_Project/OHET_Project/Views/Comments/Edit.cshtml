@model OHET_Project.Models.models.Comment

@{
    ViewBag.Title = "Edit";
}

<section id="three" class="wrapper style2">
    <div class="inner">
        <div class="inner">
            <header class="align-center">
                <p class="special"></p>
                <h2>Edit Comment</h2>
            </header>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IDComment)
            @Html.HiddenFor(model => model.IDPost)
            @Html.HiddenFor(model => model.ApplicationUserId)
            @Html.HiddenFor(model => model.Date)
            <div class="12u$">
                @Html.TextAreaFor(model => model.Description, 6, 1, htmlAttributes: new { @class = "form-control", @placeholder = "Description" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>

            <br />

            <footer class="align-center">
                <button type="submit" class="button alt">Edit</button>
            </footer>
        }
    </div>
    <div class="align-center">
        @Html.ActionLink("Back to Article", "Details", "Posts", new { id = Model.IDPost }, new { })
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
