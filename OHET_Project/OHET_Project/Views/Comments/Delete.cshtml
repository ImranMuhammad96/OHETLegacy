@model OHET_Project.Models.models.Comment

@{
    ViewBag.Title = "Delete";
}

<section id="three" class="wrapper style2">
    <div class="inner">
        <div class="inner">
            <header class="align-center">
                <p class="special">Are you sure you want to delete this comment?</p>
                <h2>Delete comment</h2>
            </header>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="12u$">
                Title
                @Html.EditorFor(model => model.Post.Title, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
            <br />
            <div class="12u$">
                Description
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", disabled = "disabled", @rows = 24 })
            </div>
            <br />
            <div class="12u$">
                Date
                <input type="text" value="@Model.Date" disabled="disabled" />
            </div>

            <br />

            <footer class="align-center">
                <input type="submit" value="Delete" class="btn btn-default" />
            </footer>
        }
        <div class="align-center">
            @Html.ActionLink("Back to Article", "Details", "Posts", new { id = ViewBag.IDPost }, new { })
        </div>
    </div>
</section>
