@model OHET_Project.Models.models.Adventure

@{
    ViewBag.Title = "Details";
}

<section id="three" class="wrapper style2">
    <div class="inner">
        <div class="inner">
            <header class="align-center">
                <p class="special"></p>
                <h2>Adventure Details</h2>
            </header>
        </div>
        <div class="12u$">
            Title
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
        <br />
        <div class="12u$">
            Description
            @Html.TextAreaFor(model => model.description, new { @class = "form-control", disabled = "disabled", @rows = 24 })
        </div>

        <br />

        <footer class="align-center">
            @if (Model.Content.ApplicationUserId == ViewBag.userId || User.IsInRole("Admin"))
            {
                <a href="@Url.Action("Edit", "Adventures", new { id = Model.IDAdventure })" class="button alt">Edit</a>
                <a href="@Url.Action("Delete", "Adventures", new { id = Model.IDAdventure })" class="button alt">Delete</a>
            }
        </footer>
        <div class="align-center">
            @if (Model.Content.ApplicationUserId == ViewBag.userId)
            {
                @Html.ActionLink("Back to List", "Index", new { isOff = ViewBag.isOff })
            }
            else
            {
                @Html.ActionLink("Back to List", "Details", "Contents", new { id = Model.IDContent }, new { })
            }
        </div>
    </div>
</section>
