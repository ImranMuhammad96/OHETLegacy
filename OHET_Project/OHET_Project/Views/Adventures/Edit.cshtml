@model OHET_Project.Models.models.Adventure

@{
    ViewBag.Title = "Edit";
}

<section id="three" class="wrapper style2">
    <div class="inner">
        <div class="inner">
            <header class="align-center">
                <p class="special"></p>
                <h2>Edit Adventure</h2>
            </header>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IDAdventure)
            @Html.HiddenFor(model => model.IDContent)
            <div class="12u$">
                @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", placeholder = "Title" } })
                @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="12u$">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>

            <br />

            <footer class="align-center">
                <button type="submit" class="button alt">Edit</button>
            </footer>
        }
    </div>
    <div class="align-center">
        @if (Model.Content.ApplicationUserId == ViewBag.userId)
        {
            @Html.ActionLink("Back to List", "Index", new { isOff = ViewBag.isOff })
        }
        else
        {
            @Html.ActionLink("Back to List", "Details", "Contents", new { id = Model.IDContent }, new { })
        }
    </div>
</section>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
