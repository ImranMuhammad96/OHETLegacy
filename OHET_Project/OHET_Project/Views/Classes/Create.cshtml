@model OHET_Project.Models.models.Class

@{
    ViewBag.Title = "Create";
}

<section id="three" class="wrapper style2">
    <div class="inner">
        <div class="inner">
            <header class="align-center">
                <p class="special"></p>
                <h2>Create Class</h2>
            </header>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="12u$">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="12u$">
                @Html.TextAreaFor(model => model.description, 12, 1, htmlAttributes: new { @class = "form-control", @placeholder = "Description" })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="12u$">
                Is spellcaster?
                @Html.DropDownList("isSpellcaster",new SelectList(new[]{new { Value = "true", Text = "Yes" },new { Value = "false", Text = "No" },},"Value","Text",Model))
            </div>

            <br />

            <footer class="align-center">
                <button type="submit" class="button alt">Create</button>
            </footer>
        }
    </div>
	
    <div class="form-group">
		<div class="align-center">
			@Html.ActionLink("Back to List", "Index", new { isOff = ViewBag.isOff })
		</div>
	</div>
</section>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
