@model OHET_Project.Models.models.Class

@{
    ViewBag.Title = "Edit";
}

<section id="three" class="wrapper style2">
    <div class="inner">
        <div class="inner">
            <header class="align-center">
                <p class="special"></p>
                <h2>Edit Class</h2>
            </header>
        </div>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IDClass)
            @Html.HiddenFor(model => model.IDContent)
            <div class="12u$">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="12u$">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
            @*
            <br />
            <div class="12u$">
                <input type="file" name="ImageData" onchange="fileCheck(this);" />
            </div>
            *@
            <br />

            <footer class="align-center">
                <button type="submit" class="button alt">Edit</button>
            </footer>
        }
    </div>
    <div class="align-center">
        @if (Model.Content.ApplicationUserId == ViewBag.userId)
        {
            @Html.ActionLink("Back to List", "Index", new { isOff = ViewBag.isOff })
        }
        else
        {
            @Html.ActionLink("Back to List", "Details", "Contents", new { id = Model.IDContent }, new { })
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
