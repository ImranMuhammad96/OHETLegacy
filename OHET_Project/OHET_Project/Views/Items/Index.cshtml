@model IEnumerable<OHET_Project.Models.models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" class="btn btn-default" />
        @Html.ActionLink("Clear", "Index", new { isOff = ViewBag.isOff })
    </p>
}

<table class="table">
@foreach (var item in Model.OrderBy(x => x.Name)) {
    if (@item.Content.ApplicationUserId == ViewBag.userId || @item.Content.isOfficial == true)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        @if (@item.Notes.Split().ToArray().Length <= 20)
        {
            <td>
                @item.Notes
            </td>
        }
        else
        {
            <td>
                @String.Join(" ", @item.Notes.Split().Take(20))
                @Html.ActionLink("...", "Details", new { id = item.IDItem })
            </td>
        }
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.IDItem })
        </td>
        @if (@item.Content.ApplicationUserId == ViewBag.userId || User.IsInRole("Admin"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDItem }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDItem })
            </td>
        }
    </tr>
    }
}
</table>
