@model OHET_Project.Models.models.Hero
@using OHET_Project.Models.models

@{
    ViewBag.Title = "Details";
}

@{
    string style = "half0";

    switch (Model.Class.name)
    {
        case "Warrior": style = "half0"; break;
        case "Rogue": style = "half1"; break;
        case "Barbarian": style = "half2"; break;
        case "Mage": style = "half3"; break;
        case "Priest": style = "half4"; break;
        case "Bard": style = "half5"; break;
        default: style = "half6"; break;
    }


    var _background = "";
    var _appearance = "";
    var _character = "";
    if (!string.IsNullOrEmpty(Model.background))
    {
        _background = Model.background;
    }
    if (!string.IsNullOrEmpty(Model.appearance))
    {
        _appearance = Model.appearance;
    }
    if (!string.IsNullOrEmpty(Model.character))
    {
        _character = Model.character;
    }

}


<!-- TYTUŁ -->
<section id="three" class="wrapper style2">
    <div class="inner">
        <header class="align-center">
            <p class="special">Let's change your destiny!</p>
            <h2>Edit Character Sheet</h2>
        </header>
    </div>
</section>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.HiddenFor(model => model.IDHero)
    @Html.HiddenFor(model => model.IDContent)
    @Html.HiddenFor(model => model.IDClass)
    @Html.HiddenFor(model => model.Content)
    @Html.HiddenFor(model => model.Class)
    <!-- KARTA POSTACI -->
    <section class="container">
        <article class="@style">
            <h1>@Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })</h1>
            <h2 contenteditable="true">Class: @Model.Class.name | HC: @Model.conceptLvl</h2>
            <p class="detail" style="text-align:center">@Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })</p>
            <div class="content">
                <div class="main-cont cont">
                    <div class="stats">
                        <div>
                            <label for="coins">Coins</label>
                            <input type="number" name="gold" id="gold" class="inpt number" required="required" placeholder="0" value=@Model.gold>
                        </div>
                        <div>
                            <label for="exp">Experience points</label>
                            <input type="number" name="exp" id="exp" class="inpt number" required="required" placeholder="0" value=@Model.exp>
                        </div>
                    </div>
                    <hr>
                    <div class="stats abilities">

                        <div>
                            <label for="StrAttribute">STR</label>
                            <div id="StrAttribute" class="stat" contenteditable="true">@Html.DisplayFor(m => m.StrAttribute)</div>
                        </div>
                        <div>
                            <label for="DexAttribute">DEX</label>
                            <div id="DexAttribute" class="stat" contenteditable="true">@Html.DisplayFor(m => m.DexAttribute)</div>
                        </div>
                        <div>
                            <label for="ConAttribute">CON</label>
                            <div id="ConAttribute" class="stat" contenteditable="true">@Html.DisplayFor(m => m.ConAttribute)</div>
                        </div>
                    </div>
                    <div class="stats abilities">
                        <div>
                            <label for="IntAttribute">INT</label>
                            <div id="IntAttribute" class="stat" contenteditable="true">@Html.DisplayFor(m => m.IntAttribute)</div>
                        </div>
                        <div>
                            <label for="WisAttribute">WIS</label>
                            <div id="WisAttribute" class="stat" contenteditable="true">@Html.DisplayFor(m => m.WisAttribute)</div>
                        </div>
                        <div>
                            <label for="ChaAttribute">CHA</label>
                            <div id="ChaAttribute" class="stat" contenteditable="true">@Html.DisplayFor(m => m.ChaAttribute)</div>
                        </div>
                    </div>
                    <hr>
                    <div class="select-wrapper">
                        <select name="StrAttribute" id="StrAttribute">
                            <option value="@AttributeLvl.Low">-- Strenght -- </option>
                            <option value="@AttributeLvl.Low">Low</option>
                            <option value="@AttributeLvl.Average">Avarage</option>
                            <option value="@AttributeLvl.High">High</option>
                        </select>
                    </div><br />
                    <div class="select-wrapper">
                        <select name="DexAttribute" id="DexAttribute">
                            <option value="@AttributeLvl.Low">-- Dexterity --</option>
                            <option value="@AttributeLvl.Low">Low</option>
                            <option value="@AttributeLvl.Average">Avarage</option>
                            <option value="@AttributeLvl.High">High</option>
                        </select>
                    </div><br />
                    <div class="select-wrapper">
                        <select name="ConAttribute" id="ConAttribute">
                            <option value="@AttributeLvl.Low">-- Constitution --</option>
                            <option value="@AttributeLvl.Low">Low</option>
                            <option value="@AttributeLvl.Average">Avarage</option>
                            <option value="@AttributeLvl.High">High</option>
                        </select>
                    </div><br />
                    <div class="select-wrapper">
                        <select name="IntAttribute" id="IntAttribute">
                            <option value="@AttributeLvl.Low">-- Intelligence --</option>
                            <option value="@AttributeLvl.Low">Low</option>
                            <option value="@AttributeLvl.Average">Avarage</option>
                            <option value="@AttributeLvl.High">High</option>
                        </select>
                    </div><br />
                    <div class="select-wrapper">
                        <select name="WisAttribute" id="WisAttribute">
                            <option value="@AttributeLvl.Low">-- Wisdom --</option>
                            <option value="@AttributeLvl.Low">Low</option>
                            <option value="@AttributeLvl.Average">Avarage</option>
                            <option value="@AttributeLvl.High">High</option>
                        </select>
                    </div><br />
                    <div class="select-wrapper">
                        <select name="ChaAttribute" id="ChaAttribute">
                            <option value="@AttributeLvl.Low">-- Charisma --</option>
                            <option value="@AttributeLvl.Low">Low</option>
                            <option value="@AttributeLvl.Average">Avarage</option>
                            <option value="@AttributeLvl.High">High</option>
                        </select>
                    </div><br />
                    <hr>
                    <div class="profs">
                        <h3>Special Abilities</h3>
                        <ul>
                            @foreach (var item in Model.Class.abilities)
                            {
                                if (Model.conceptLvl >= @item.conceptLvl)
                                {
                                    <li><span class="bold">HC @item.conceptLvl</span> - <span contenteditable="true">@item.description</span></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="profs">
                <h3>Background Story</h3>
                <textarea name="background" id="backhround" rows="12">@Model.background</textarea>
                <br /><h3>Appearance</h3>
                <textarea name="appearance" id="appearance" rows="6">@Model.appearance</textarea>
                <br /><h3>Character</h3>
                <textarea name="character" id="character" rows="6">@Model.character</textarea>
            </div>
        </article>
        <div class="@style bg"></div>
    </section>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}



@Scripts_()
@Styles_()

@helper Styles_()
{
    <link href="@Url.Content("~/Content/character-sheet-08.css")" rel="stylesheet" type="text/css" />
}

@helper Scripts_()
{
    <script src="@Url.Content("~/Scripts/character-sheet-scripts.js")"></script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
