@model OHET_Project.Models.models.Spell

@{
    ViewBag.Title = "Create";
}

<section id="three" class="wrapper style2">
    <div class="inner">
        <div class="inner">
            <header class="align-center">
                <p class="special"></p>
                <h2>Create Spell</h2>
            </header>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="12u$">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="12u$">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="12u$">
                @Html.EditorFor(model => model.conceptLvl, new { htmlAttributes = new { @class = "form-control", placeholder = "Concept Level", type = "text" } })
                @Html.ValidationMessageFor(model => model.conceptLvl, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="12u$">
                @Html.DropDownList("IDClass", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDClass, "", new { @class = "text-danger" })
            </div>

            <br />

            <footer class="align-center">
                <button type="submit" class="button alt">Create</button>
            </footer>
        }
    </div>
    <div class="align-center">
        @Html.ActionLink("Back to List", "Index", new { isOff = ViewBag.isOff })
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
