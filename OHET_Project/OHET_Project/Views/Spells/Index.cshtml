@model IEnumerable<OHET_Project.Models.models.Spell>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/table.css" rel="stylesheet" type="text/css" />

<h2>Spells</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@foreach (var i in Model.Select(c => c.Class.IDClass).Distinct().ToArray()) {
