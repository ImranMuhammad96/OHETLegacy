@model IEnumerable<OHET_Project.Models.models.Spell>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/table.css" rel="stylesheet" type="text/css" />

<h2>Spells</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" class="btn btn-default"/>
        @Html.ActionLink("Clear", "Index")
    </p>
}

@foreach (var i in Model.OrderBy(o => o.Class.name).Where(x => x.Content.isOfficial==true || x.Content.ApplicationUserId==ViewBag.userId).Select(c => c.Class.IDClass).Distinct().ToArray()) {
    <h2>@Html.DisplayName(Model.Where(a => a.Class.IDClass == i).Select(aa => aa.Class.name).FirstOrDefault())</h2>
    <table class="table">
        @*
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.conceptLvl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th></th>
        </tr>
        *@
    @foreach (var item in Model.OrderBy(x => x.name).OrderBy(y => y.conceptLvl)) {
        if (item.IDClass == i)
        {
            if (@item.Content.ApplicationUserId == ViewBag.userId || @item.Content.isOfficial == true)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.conceptLvl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                
                @if (@item.description.Substring(0, @item.description.IndexOf('.')) == @item.description.Substring(0, @item.description.Length - 1))
                {
                    <td>
                        @item.description.Substring(0, @item.description.IndexOf('.') + 1)
                    </td>
                }
                else
                {
                    <td>
                        @item.description.Substring(0, @item.description.IndexOf('.') + 1) @Html.ActionLink("...", "Details", new { id = item.IDSpell })
                    </td>
                }
                
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.IDSpell })
                </td>
                @if (@item.Content.ApplicationUserId == ViewBag.userId || User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IDSpell }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IDSpell })
                    </td>
                }
            </tr>
            }
        }
    }
    </table>
}
